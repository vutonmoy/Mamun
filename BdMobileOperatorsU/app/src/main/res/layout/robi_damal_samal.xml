<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.appstech.mamun.bdmobileoperatorsshake.RobiDamalSamal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginBottom="9dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Damal Samal 22 Package"
        android:background="@drawable/robi_button"
        android:layout_gravity="center_horizontal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="On-Net"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="15paisa/10sec"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Off-Net"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="25paisa/10sec"
                    android:layout_weight="1"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="FnF"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="11 Numbers"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Super FnF"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="2 Numbers"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="S.FnF Call Rate"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="4.17paisa/10sec"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="FnF Call Rate"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="10paisa/10sec"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@android:drawable/alert_light_frame"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="SMS"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="25paisa/Any"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:text="Active Now"
                android:id="@+id/alert_lite"
                android:onClick="showAlert"

                android:textColor="@android:color/white"
                android:background="@drawable/robi_button"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>




    </ScrollView>



</LinearLayout>
